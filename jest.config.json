{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": [
      "ts-jest"
    ]
  },
  "verbose": true,
  "forceExit": true,
  "collectCoverage": true,
  "preset": "ts-jest",
  "collectCoverageFrom": [
    "<rootDir>/src/**/*.ts"
  ],
  "coverageDirectory": "../coverage"
}